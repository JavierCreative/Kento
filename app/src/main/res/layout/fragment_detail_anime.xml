<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".presentation.detail.DetailAnimeFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progress_linearprogressindicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/trailer_cardview"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="24dp"
            app:cardElevation="16dp"
            app:cardCornerRadius="12dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/trailer_imageview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                    android:id="@+id/play_imageview"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_play_arrow"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/button_gradient"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/banner_cardview"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="48dp"
            app:layout_goneMarginTop="48dp"
            android:layout_marginStart="24dp"
            app:cardElevation="12dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/trailer_cardview">
            <ImageView
                android:id="@+id/banner_imageview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/title_materialtextview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/banner_cardview"
            app:layout_constraintTop_toTopOf="@id/banner_cardview" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/score_materialtextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="8dp"
            android:drawableEnd="@drawable/ic_star_rate"
            android:drawableTint="@color/red_500"
            app:layout_constraintStart_toEndOf="@id/banner_cardview"
            app:layout_constraintTop_toBottomOf="@id/title_materialtextview" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/genres_chipgroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/score_materialtextview"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/information_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="40dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/genres_chipgroup">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/half_screen_information_guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/information_label_materialtextview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="24dp"
                    android:textSize="20sp"
                    android:fontFamily="@font/source_sans_pro_semibold"
                    android:textColor="@color/black"
                    android:text="@string/information_string"
                    android:textAlignment="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/ranked_label_materialtextview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="24dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/source_sans_pro_semibold"
                    android:textColor="@color/black"
                    android:text="@string/ranked_string"
                    android:textAlignment="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/information_label_materialtextview"
                    app:layout_constraintEnd_toStartOf="@id/half_screen_information_guideline"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/popularity_label_materialtextview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="24dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/source_sans_pro_semibold"
                    android:textColor="@color/black"
                    android:text="@string/pupularity_string"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/information_label_materialtextview"
                    app:layout_constraintStart_toEndOf="@id/half_screen_information_guideline"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/ranked_materialtextview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/source_sans_pro"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ranked_label_materialtextview"
                    app:layout_constraintEnd_toStartOf="@id/half_screen_information_guideline"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/popularity_materialtextview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/source_sans_pro"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/popularity_label_materialtextview"
                    app:layout_constraintStart_toEndOf="@id/half_screen_information_guideline"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/aired_label_materialtextview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="16dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/source_sans_pro_semibold"
                    android:textColor="@color/black"
                    android:text="@string/aired_string"
                    android:textAlignment="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ranked_materialtextview"
                    app:layout_constraintEnd_toStartOf="@id/half_screen_information_guideline"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/status_label_materialtextview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="16dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/source_sans_pro_semibold"
                    android:textColor="@color/black"
                    android:text="@string/status_string"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/popularity_materialtextview"
                    app:layout_constraintStart_toEndOf="@id/half_screen_information_guideline"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/aired_materialtextview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/source_sans_pro"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/aired_label_materialtextview"
                    app:layout_constraintEnd_toStartOf="@id/half_screen_information_guideline"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/status_materialtextview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/source_sans_pro"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/status_label_materialtextview"
                    app:layout_constraintStart_toEndOf="@id/half_screen_information_guideline"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/broadcast_label_materialtextview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="16dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/source_sans_pro_semibold"
                    android:textColor="@color/black"
                    android:text="@string/broadcast_string"
                    android:textAlignment="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/aired_materialtextview"
                    app:layout_constraintEnd_toStartOf="@id/half_screen_information_guideline"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/studios_label_materialtextview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="16dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/source_sans_pro_semibold"
                    android:textColor="@color/black"
                    android:text="@string/studios_string"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/status_materialtextview"
                    app:layout_constraintStart_toEndOf="@id/half_screen_information_guideline"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/broadcast_materialtextview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/source_sans_pro"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/broadcast_label_materialtextview"
                    app:layout_constraintEnd_toStartOf="@id/half_screen_information_guideline"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/studios_materialtextview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/source_sans_pro"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/studios_label_materialtextview"
                    app:layout_constraintStart_toEndOf="@id/half_screen_information_guideline"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/rating_label_materialtextview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="16dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/source_sans_pro_semibold"
                    android:textColor="@color/black"
                    android:text="@string/rating_string"
                    android:textAlignment="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/broadcast_materialtextview"
                    app:layout_constraintEnd_toStartOf="@id/half_screen_information_guideline"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/episodes_label_materialtextview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="16dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/source_sans_pro_semibold"
                    android:textColor="@color/black"
                    android:text="@string/episodes_string"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/studios_materialtextview"
                    app:layout_constraintStart_toEndOf="@id/half_screen_information_guideline"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/rating_materialtextview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/source_sans_pro"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rating_label_materialtextview"
                    app:layout_constraintEnd_toStartOf="@id/half_screen_information_guideline"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/episodes_materialtextview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/source_sans_pro"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/episodes_label_materialtextview"
                    app:layout_constraintStart_toEndOf="@id/half_screen_information_guideline"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/duration_label_materialtextview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="16dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/source_sans_pro_semibold"
                    android:textColor="@color/black"
                    android:text="@string/duration_string"
                    android:textAlignment="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rating_materialtextview"
                    app:layout_constraintEnd_toStartOf="@id/half_screen_information_guideline"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/members_label_materialtextview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="16dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/source_sans_pro_semibold"
                    android:textColor="@color/black"
                    android:text="@string/members_string"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/episodes_materialtextview"
                    app:layout_constraintStart_toEndOf="@id/half_screen_information_guideline"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/duration_materialtextview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="24dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/source_sans_pro"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    app:layout_constraintVertical_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/duration_label_materialtextview"
                    app:layout_constraintEnd_toStartOf="@id/half_screen_information_guideline"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/members_materialtextview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="24dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/source_sans_pro"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    app:layout_constraintVertical_bias="0"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/members_label_materialtextview"
                    app:layout_constraintStart_toEndOf="@id/half_screen_information_guideline"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/synopsis_label_materialtextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/synopsis_string"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="24dp"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/information_cardview"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/synopsis_materialtextview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/synopsis_label_materialtextview"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/characters_label_materialtextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/characters_string"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="24dp"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/synopsis_materialtextview"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/characters_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="40dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/characters_label_materialtextview"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>